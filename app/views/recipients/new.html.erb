<%= link_to "Home", root_path %>
<%= form_for @recipient do |f| %>
	
	<%= render "shared/error_messages", object: f.object %>

	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :company %>
	<%= f.text_field :company %>

	<%= f.label :email %>
	<%= f.email_field :email %>

	<%= f.label :phone %>
	<%= f.telephone_field :phone %>

	<%= f.submit "Send a Card" %>
<% end %>
